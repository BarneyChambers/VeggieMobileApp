<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeggieMobile21062018.SendPage">
    <ContentPage.Content>

        <StackLayout Margin="20,60,20,60">
            <Entry 
                Grid.Row="0"
                x:Name="paytoEntry"
                Placeholder="Pay to"
               />
            <Entry 
                Grid.Row="1"
                x:Name="labelEntry"
                Placeholder="Label"
               />
            <Entry 
                Grid.Row="1"
                x:Name="messageEntry"
                Placeholder="Message"
               />
            <Entry 
                Grid.Row="2"
                x:Name="amountEntry"
                Keyboard="Numeric"
                TextChanged="TrimAmountEntry"
                Placeholder="Amount"
               />
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button
                    VerticalOptions="End"
                    Grid.Row="3"
                    x:Name="btnSend"
                    Clicked="sendByAddress"
                    Text="Send by address"
                />
                <Button
                    VerticalOptions="End"
                    Grid.Row="4"
                    x:Name="btnScan"
                    Text="Scan QR code"
            />
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>